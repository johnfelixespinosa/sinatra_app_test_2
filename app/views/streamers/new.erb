<h1>Add a new Streamer</h1>

<form action="/streamers" method="POST">
  <label>Streamer Name:</label>
  <input type="text" name="Streamer Name"><br>

  <label>Stream URL:</label>
  <input type="text" name="URL">

  <label>Games they play</label>
    <% Game.all.each do |game| %>
      <label><%= game.name %></label>
      <input type="checkbox" id="<%=game.id%>" value="<%= game.id %>"><br>
    <% end %>
 
  <label><h4>Add new Game:</h4></label>
  <input type="text" id="new_game" name="game[name]">

    <input type="submit" id="Create" value="Create">
</form>